version: "3"
services:
  opa:
    image: openpolicyagent/opa:latest
    command: ["run", "--server", "/policies/policy.rego"]
    volumes:
      - ./opa:/policies
    ports:
      - "8181:8181"

  backend:
    build: ./backend
    ports:
      - "9000:9000"
  gateway:
    build: ./nginx
    ports:
      - "8080:80"
    volumes:
      - ./logs:/var/log/nginx
    
