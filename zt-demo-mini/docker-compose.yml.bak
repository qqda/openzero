version: '3.8'

services:
  gateway:
    image: openresty/openresty:1.21.4.1-0-bullseye
    ports:
      - "8080:80"
    volumes:
      - ./nginx/nginx.conf:/usr/local/openresty/nginx/conf/nginx.conf
      - ./nginx/auth.lua:/usr/local/openresty/nginx/conf/auth.lua
      - ./logs:/var/log/nginx

  opa:
    image: openpolicyagent/opa:latest
    ports:
      - "8181:8181"
    volumes:
      - ./opa/policy.rego:/policies/policy.rego
      - ./opa/blacklist.json:/policies/blacklist.json
    command: "run --server --watch /policies"
    
  backend:
    build: ./backend
    ports:
      - "9000:9000"    